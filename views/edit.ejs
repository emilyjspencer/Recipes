<!DOCTYPE html>
<html>
  <head>
  <title>Edit Recipe</title>
  <link rel="stylesheet" href="/static/stylesheets/styling.css" type="text/css">
  <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" 
  integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
  </head>
  <body>
    <div class="recipe-container">
    <h2>Recipes</h2>
    <div class="recipe">
    <form action="" method="POST" class="recipe-header">
      <input type="text" name="content">
      <button type="submit"><span class="fas fa-plus"></span></button>
    </form>
    <ul class="recipe-list">
      <% recipesToAdd.forEach(details => { %>
      <% if (details._id == idRecipe) { %>
    <li class="recipe-list-item">
      <form action="/edit/<%= details._id %>" method="POST">
        <input type="text" value="<%= details.content %>" name="content">
        <button type="submit">Confirm</button>
        <a href="/" class="cancel">Cancel</a>
      </form>
    </li>
      <% } else { %>
    <li class="recipe-list-item">
    <div class="recipe-list-item-name"><%= details.content %></div>
    <a href="/edit/<%= details._id %>" class="edit"> <span class="fas fa-edit"></span>
    </a>
    <a href="/remove/<%= details._id %>" class="remove"> <span class="fas fa-times"></span>
  </a>
  </li>
 <% } %>
 <% }) %>
 </ul>
</div>
</div>
</body>
</html>